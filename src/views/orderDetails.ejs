<%- include('header.ejs') %>

<div class="ui container text-center">

    <div style="margin-bottom:4vh">
        <h1>Order Details</h1>
    </div>

    <br/><br/>

    <div class="row text-center">
        <% for(var i=0;i<products.length ;i++) { %>
            <div class="col-sm-4">
                <div class="card" style="width: 18rem;margin:2vw;">
                    <img class="card-img-top" src="/product/photos/<%- products[i].product._id %>/0" alt="No Image Available">
                    <div class="card-body">
                        <h5 class="card-title"><%- products[i].product.name %></h5>
                        <form action="/order/admin/<%- products[i].product._id %>/<%- orderId %>" method="post" enctype="application/json">
                            <label for="status">Status:</label>
                            <select name="status" id="status" value="sds">
                                <option value="<%- products[i].status %>"><%- products[i].status %></option>
                                <optgroup label=""/>
                                <optgroup label="Admin"/>
                                <% for(var x=0;x<enumValues.length;x++) { %>
                                    <% if(enumValues[x]!='Request Return' && enumValues[x]!='Cancelled') { %>
                                        <option value="<%- enumValues[x] %>"><%- enumValues[x] %></option>
                                    <% } %>
                                <% } %>
                                <optgroup label="" />
                                <optgroup label="User" />
                                <% for(var x=0;x<enumValues.length;x++) { %>
                                    <% if((enumValues[x]=='Request Return' || enumValues[x]=='Cancelled')) { %>
                                        <option value="<%- enumValues[x] %>"><%- enumValues[x] %></option>
                                    <% } %>
                                <% } %>
                            </select>
                            <br/><br/>
                            <button class="btn btn-primary" type="submit">Change Status</button>
                        </form>
                    </div>
                </div>
            </div>
            <br/><br/>
        <% } %>
    </div>
    </div>

</div>